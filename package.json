{
  "name": "xrcrawler",
  "version": "1.0.0",
  "description": "XRCrawler - A powerful tool to scrape Twitter/X and Reddit content",
  "main": "dist/cli.js",
  "scripts": {
    "start": "node dist/cli.js",
    "examples": "node dist/cli.js examples",
    "twitter": "node dist/cli.js twitter",
    "schedule": "node dist/cli.js schedule -c crawler-config.json -i 60",
    "test": "jest",
    "dev:server": "ts-node server.ts",
    "dev:server:watch": "nodemon --watch . --ext ts --ignore frontend --ignore public --exec ts-node server.ts",
    "dev:frontend": "cd frontend && pnpm run dev",
    "build:frontend:watch": "cd frontend && pnpm run build -- --watch",
    "dev:reddit": "./scripts/start-reddit-api.sh",
    "dev": "concurrently -n \"server,frontend,reddit\" -c \"blue,green,yellow\" \"pnpm run dev:server:watch\" \"pnpm run build:frontend:watch\" \"pnpm run dev:reddit\"",
    "dev:fast": "concurrently -n \"server,frontend,reddit\" -c \"blue,green,yellow\" \"pnpm run dev:server:watch\" \"pnpm run dev:frontend\" \"pnpm run dev:reddit\"",
    "build": "tsc",
    "serve": "node dist/server.js",
    "install:frontend": "cd frontend && pnpm install",
    "build:frontend": "cd frontend && pnpm run build",
    "sync:frontend": "node scripts/sync-frontend.js",
    "deploy:frontend": "pnpm run build:frontend && pnpm run sync:frontend"
  },
  "keywords": [
    "twitter",
    "x",
    "scraper",
    "crawler",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "commander": "^13.1.0",
    "dayjs": "^1.11.19",
    "express": "^5.1.0",
    "fingerprint-generator": "^2.1.77",
    "fingerprint-injector": "^2.1.77",
    "multer": "^2.0.2",
    "puppeteer": "^22.10.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "winston": "^3.18.3"
  },
  "bin": {
    "xrcrawler": "./dist/cli.js"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}