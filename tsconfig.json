{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true
    },
    "include": [
        "core/**/*",
        "utils/**/*",
        "middleware/**/*",
        "tests/**/*",
        "server.ts",
        "worker.ts",
        "scrape-unified.ts",
        "cli.ts"
    ],
    "exclude": [
        "node_modules",
        "frontend",
        "dist"
    ]
}
